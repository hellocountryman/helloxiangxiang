<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/weibo_unline"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_hight"
        android:background="@color/indexbg" >

        <ImageView
            android:id="@+id/person_details_ret_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/return_selector"
            android:contentDescription="@string/app_name" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/person_head_rela"
        android:layout_width="fill_parent"
        android:layout_height="75.0dip"
        android:background="@drawable/common_selector"
        android:clickable="true" >

        <ImageButton
            android:layout_width="60.0dip"
            android:layout_height="60.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16.0dip"
            android:background="@drawable/ic_launcher"
            android:clickable="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16.0dip"
            android:text="头像"
            android:textColor="@color/head_color"
            android:textSize="@dimen/find_text_size" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/weibo_unline_3d" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/weibo_unline" />

    <RelativeLayout
        android:id="@+id/person_nick_rela"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:background="@drawable/common_selector"
        android:clickable="true" >

        <ImageView
            android:layout_width="12.0dip"
            android:layout_height="12.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16.0dip"
            android:src="@drawable/into_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="36.0dip"
            android:text="刘家小孩当勉励"
            android:textColor="@color/head_color"
            android:textSize="@dimen/find_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16.0dip"
            android:text="昵称"
            android:textColor="@color/head_color"
            android:textSize="@dimen/find_text_size" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/weibo_unline_3d" />

    <RelativeLayout
        android:id="@+id/person_visa_rela"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:background="@drawable/common_selector"
        android:clickable="true" >

        <ImageView
            android:layout_width="12.0dip"
            android:layout_height="12.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16.0dip"
            android:src="@drawable/into_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="36.0dip"
            android:text="喜欢阳光灿烂的样子"
            android:textColor="@color/head_color"
            android:textSize="@dimen/find_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16.0dip"
            android:text="签名"
            android:textColor="@color/head_color"
            android:textSize="@dimen/find_text_size" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/weibo_unline" />

    <RelativeLayout
        android:id="@+id/person_city_rela"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:background="@drawable/common_selector"
        android:clickable="true" >

        <ImageView
            android:layout_width="12.0dip"
            android:layout_height="12.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16.0dip"
            android:src="@drawable/into_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="36.0dip"
            android:text="平顶山"
            android:textColor="@color/head_color"
            android:textSize="@dimen/find_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16.0dip"
            android:text="签名"
            android:textColor="@color/head_color"
            android:textSize="@dimen/find_text_size" />
    </RelativeLayout>

</LinearLayout>