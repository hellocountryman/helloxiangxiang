<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/weibo_unline"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_hight"
        android:background="@color/indexbg" >

        <ImageView
            android:id="@+id/person_details_ret_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/return_selector"
            android:contentDescription="@string/app_name"
            android:onClick="personDetailsRetImg" />

        <Button
            android:layout_width="@dimen/title_hight"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8.0dip"
            android:background="@drawable/corners_storke_white"
            android:text="完成"
            android:onClick="updateInfoSuccess"
            android:textColor="@color/white"
            android:textSize="12.0sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/person_head_rela"
        android:layout_width="fill_parent"
        android:layout_height="75.0dip"
        android:background="@drawable/common_selector"
        android:clickable="true" >

        <ImageButton
            android:id="@+id/person_details_head_img"
            android:layout_width="60.0dip"
            android:layout_height="60.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16.0dip"
            android:background="@drawable/ic_launcher"
            android:clickable="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16.0dip"
            android:text="头像"
            android:textColor="@color/head_color"
            android:textSize="@dimen/find_text_size" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/weibo_unline_3d" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/weibo_unline" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50.0dip"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16.0dip"
            android:text="昵称"
            android:textColor="@color/head_color"
            android:textSize="@dimen/find_text_size" />

        <RelativeLayout
            android:id="@+id/edittext_nick_rela"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="70.0dip"
            android:layout_marginRight="6dp" >

            <com.feytuo.chat.widget.PasteEditText
                android:id="@+id/person_nick_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@null"
                android:maxLines="3"
                android:minHeight="40dp"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:paddingTop="3dp"
                android:textSize="@dimen/field_textsize" >
            </com.feytuo.chat.widget.PasteEditText>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/weibo_unline_3d" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50.0dip"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16.0dip"
            android:text="签名"
            android:textColor="@color/head_color"
            android:textSize="@dimen/find_text_size" />

        <RelativeLayout
            android:id="@+id/edittext_visa_rela"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="70.0dip"
            android:layout_marginRight="6dp" >

            <com.feytuo.chat.widget.PasteEditText
                android:id="@+id/person_visa_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@null"
                android:maxLines="3"
                android:minHeight="40dp"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:paddingTop="3dp"
                android:textSize="@dimen/field_textsize" >
            </com.feytuo.chat.widget.PasteEditText>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/weibo_unline_3d" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/weibo_unline" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50.0dip"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16.0dip"
            android:text="家乡"
            android:textColor="@color/head_color"
            android:textSize="@dimen/find_text_size" />

        <TextView
            android:id="@+id/person_details_home_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="42.0dip"
            android:text="永州"
            android:textSize="@dimen/field_textsize" />

        <include layout="@layout/viewintimg" />
    </RelativeLayout>

</LinearLayout>