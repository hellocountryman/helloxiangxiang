<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/weibo_unline"
    android:orientation="vertical" >

    <com.feytuo.listviewonload.ZrcListView
        android:id="@+id/find_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:divider="@color/weibo_unline"
        android:scrollbars="none" />
    <!-- start -->

    <RelativeLayout
        android:id="@+id/index_title_relactivelayout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_hight"
        android:background="@color/indexbg" >

        <Button
            android:id="@+id/find_details_return_btn"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:layout_centerVertical="true"
            android:background="@drawable/return_selector"
            android:onClick="findDetailsReturnBtn" />

        <TextView
            android:id="@+id/find_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/changsha"
            android:textColor="@color/white"
            android:textSize="@dimen/city_text_size" />

        <Button
            android:id="@+id/find_publish_btn"
            android:layout_width="@dimen/title_hight"
            android:layout_height="@dimen/title_hight"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/common_tab_bg"
            android:text="发布"
            android:textColor="@color/white"
            android:textSize="16.0sp" />
    </RelativeLayout>

    <!-- end -->

</RelativeLayout>