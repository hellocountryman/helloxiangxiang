<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/weibo_unline"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_hight"
        android:background="@color/indexbg" >

        <Button
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:layout_centerVertical="true"
            android:background="@drawable/return_selector"
            android:onClick="messagecollectReturnRelative" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/viewpager_tab"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/my_message_linearlayout"
                android:layout_width="80.0dip"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonstyleleftno"
                android:clickable="true" >

                <TextView
                    android:id="@+id/messagecollect_message_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="5.0dip"
                    android:clickable="false"
                    android:text="@string/mymessage"
                    android:textColor="@color/indexbg"
                    android:textSize="@dimen/messageandcollext_text_size" />

                <Button
                    android:id="@+id/message_redpoint_btn"
                    android:layout_width="8.0dip"
                    android:layout_height="8.0dip"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/red_point"
                    android:visibility="invisible"
                    android:clickable="false" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_collect_linearlayout"
                android:layout_width="80.0dip"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonstylerightno"
                android:clickable="true" >

                <TextView
                    android:id="@+id/messagecollect_collect_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="5.0dip"
                    android:clickable="false"
                    android:text="@string/mycollect"
                    android:textColor="@color/white"
                    android:textSize="@dimen/messageandcollext_text_size" />

                <Button
                    android:id="@+id/collect_redpoint_btn"
                    android:layout_width="8.0dip"
                    android:layout_height="8.0dip"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:visibility="invisible"
                    android:background="@drawable/red_point" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        android:background="@color/weibo_unline"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />

</LinearLayout>
