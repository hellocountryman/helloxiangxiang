<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_selector"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"
        android:layout_marginTop="@dimen/margin_item_top" >

        <ImageView
            android:id="@+id/title_img_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/geographical" />

        <TextView
            android:id="@+id/index_locals_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/margin_8dip"
            android:layout_toRightOf="@+id/title_img_id"
            android:text="@string/country"
            android:textColor="@color/indexbg"
            android:textSize="16.0sp" />

        <TextView
            android:id="@+id/index_locals_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="2014-09-17 19:20"
            android:textColor="@color/text_time_color"
            android:textSize="@dimen/text_time_size" />
    </RelativeLayout>

    <TextView
        android:id="@+id/audio_space_textview_1"
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <TextView
        android:id="@+id/index_text_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8.0dip"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"
        android:layout_marginTop="8.0dip"
        android:textColor="@color/black"
        android:textSize="16.0sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/audio_space_textview_2"
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:id="@+id/audio_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/person_head_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_right"
                android:layout_marginRight="@dimen/margin_left_right"
                android:background="@drawable/person" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4" >

                <ProgressBar
                    android:id="@+id/index_progressbar_id"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="28.0dip"
                    android:layout_centerInParent="true"
                    android:background="@drawable/progress_selector"
                    android:clickable="true"
                    android:progressDrawable="@drawable/myprogress_style" />

                <ImageButton
                    android:id="@+id/index_progressbar_btn"
                    android:layout_width="match_parent"
                    android:layout_height="28.0dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/play_ico"
                    android:clickable="false"
                    android:focusable="false"
                    android:gravity="center" />
            </RelativeLayout>

            <TextView
                android:id="@+id/index_progressbar_time"
                android:layout_width="0.0dip"
                android:layout_height="30.0dip"
                android:layout_marginLeft="@dimen/margin_8dip"
                android:layout_weight="2"
                android:clickable="false"
                android:contentDescription="@string/app_name"
                android:gravity="center_vertical"
                android:textColor="@color/text_num_color" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_marginTop="8.0dip"
        android:background="@color/weibo_unline" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="36dip"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/index_support_linerlayout"
            android:layout_width="0.0dip"
            android:layout_height="36dip"
            android:layout_weight="1"
            android:background="@drawable/common_selector"
            android:clickable="true"
            android:gravity="center" >

            <ImageButton
                android:id="@+id/support_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/support_no"
                android:clickable="false" />

            <TextView
                android:id="@+id/index_support_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:clickable="false"
                android:text="赞"
                android:textColor="@color/text_num_color"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="wrap_content"
            android:background="@color/weibo_unline" />

        <LinearLayout
            android:id="@+id/index_comment_linerlayout"
            android:layout_width="0.0dip"
            android:layout_height="36dip"
            android:layout_weight="1"
            android:background="@drawable/common_selector"
            android:clickable="true"
            android:gravity="center" >

            <ImageButton
                android:id="@+id/comment_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/comment_selector"
                android:clickable="false" />

            <TextView
                android:id="@+id/index_comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:clickable="false"
                android:text="评论"
                android:textColor="@color/text_num_color"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="wrap_content"
            android:background="@color/weibo_unline" />

        <LinearLayout
            android:id="@+id/index_collect_linerlayout"
            android:layout_width="0.0dip"
            android:layout_height="36dip"
            android:layout_weight="1"
            android:background="@drawable/common_selector"
            android:clickable="true"
            android:gravity="center" >

            <ImageButton
                android:id="@+id/collect_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/collect_no"
                android:clickable="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:clickable="false"
                android:text="收藏"
                android:textColor="@color/text_num_color"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="wrap_content"
            android:background="@color/weibo_unline" />

        <LinearLayout
            android:id="@+id/index_share_linerlayout"
            android:layout_width="0.0dip"
            android:layout_height="36dip"
            android:layout_weight="1"
            android:background="@drawable/common_selector"
            android:clickable="true"
            android:gravity="center" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/share_selector"
                android:clickable="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:clickable="false"
                android:text="分享"
                android:textColor="@color/text_num_color"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/viewone3dhight" />
    <!-- 让布局有一个立体的效果 -->

    <include layout="@layout/viewtenhight" />

</LinearLayout>