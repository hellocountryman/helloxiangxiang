<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/weibo_unline"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_hight"
        android:background="@color/indexbg" >

        <RelativeLayout
            android:id="@+id/publish_return_relative"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/title_hight"
            android:layout_centerVertical="true"
            android:background="@drawable/return_head_common_selector"
            android:clickable="true"
            android:onClick="publishReturnRelative" >

            <Button
                android:id="@+id/return_button_id"
                android:layout_width="48.0dip"
                android:layout_height="48.0dip"
                android:layout_centerVertical="true"
                android:background="@drawable/return_selector"
                android:clickable="false" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/publish_fangyang"
            android:textColor="@color/white"
            android:textSize="@dimen/title_city_size" />

        <Button
            android:id="@+id/publish_button"
            android:layout_width="48.0dip"
            android:layout_height="30.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8.0dip"
            android:background="@drawable/corners_storke_white"
            android:text="@string/publish_text"
            android:textColor="@color/white"
            android:textSize="@dimen/city_text_size" />
    </RelativeLayout>

    <EditText
        android:id="@+id/publish_text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/corners_storke_weibo"
        android:gravity="top"
        android:layout_marginLeft="2.0dip"
        android:layout_marginRight="2.0dip"
        android:hint="请用一段话描述语音"
        android:inputType="textMultiLine"
        android:padding="2.0dip"
        android:singleLine="false"
        android:textSize="16.0sp" >

        <requestFocus />
    </EditText>
    <!-- textScaleX控制字与字之间的间距, android:gravity="left|top",android:gray="top" //多行中指针在第一行第一位置 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/person_head_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16.0dip"
            android:background="@drawable/person" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1.0dip"
            android:layout_weight="4" >

            <ProgressBar
                android:id="@+id/progressbar_id"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="28.0dip"
                android:layout_centerInParent="true"
                android:background="@drawable/progress_selector"
                android:clickable="true"
                android:progressDrawable="@drawable/myprogress_style" />

            <TextView
                android:id="@+id/publish_hint"
                android:layout_width="match_parent"
                android:layout_height="28.0dip"
                android:layout_centerInParent="true"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:text="点一下开始录音"
                android:textColor="@color/black"
                android:textSize="@dimen/text_time_size" />

            <ImageButton
                android:id="@+id/publish_play_record_imgbutton"
                android:layout_width="match_parent"
                android:layout_height="30.0dp"
                android:layout_centerInParent="true"
                android:background="@drawable/play_ico"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/publish_record_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="0s"
            android:textColor="@color/text_time_color"
            android:textSize="@dimen/text_time_size" />

        <Button
            android:id="@+id/publish_rerecord_button"
            android:layout_width="48.0dp"
            android:layout_height="30.0dip"
            android:layout_marginRight="16.0dip"
            android:background="@drawable/corners_storke_indexbg"
            android:text="@string/rerecord"
            android:textSize="16sp"
            android:visibility="invisible" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/publish_title_img_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16.0dip"
            android:background="@drawable/geographical" />

        <TextView
            android:id="@+id/publish_title_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="8.0dip"
            android:layout_toRightOf="@+id/publish_title_img_id"
            android:text="地球"
            android:textColor="@color/text_num_color"
            android:textSize="16.0sp" />
    </RelativeLayout>

</LinearLayout>