<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"
        android:layout_marginTop="@dimen/margin_item_top" >

        <ImageView
            android:id="@+id/title_img_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/geographical" />

        <TextView
            android:id="@+id/mymessage_locals_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_text_ico"
            android:layout_toRightOf="@+id/title_img_id"
            android:text="@string/country"
            android:textColor="@color/indexbg"
            android:textSize="20.0sp" />

        <TextView
            android:id="@+id/mymessage_locals_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="2014-09-17 19:20"
            android:textColor="@color/text_time_color"
            android:textSize="@dimen/text_time_size" />
    </RelativeLayout>

    <TextView
        android:id="@+id/mymessage_text_describe"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8.0dip"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"
        android:layout_marginTop="8.0dip"
        android:textColor="@color/black"
        android:textSize="16.0sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/person" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8.0dip"
            android:progress="50"
            android:progressDrawable="@drawable/myprogress_style" />

        <TextView
            android:id="@+id/mymessage_record_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_ico_text"
            android:text="45s"
            android:textColor="@color/text_time_color"
            android:textSize="@dimen/text_time_size" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_marginTop="8.0dip"
        android:background="@color/weibo_unline" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="36dip"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/mymessage_support_linerlayout"
            android:layout_width="0.0dip"
            android:layout_height="36dip"
            android:layout_weight="1"
            android:background="@drawable/common_selector"
            android:clickable="true"
            android:gravity="center" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/support_no" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:text="赞"
                android:textColor="@color/text_num_color"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="wrap_content"
            android:background="@color/weibo_unline" />

        <LinearLayout
            android:id="@+id/mymessage_comment_linerlayout"
            android:layout_width="0.0dip"
            android:layout_height="36dip"
            android:layout_weight="1"
            android:background="@drawable/common_selector"
            android:clickable="true"
            android:gravity="center" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/comment_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:text="评论"
                android:textColor="@color/text_num_color"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="wrap_content"
            android:background="@color/weibo_unline" />

        <LinearLayout
            android:id="@+id/mymessage_collect_linerlayout"
            android:layout_width="0.0dip"
            android:layout_height="36dip"
            android:layout_weight="1"
            android:background="@drawable/common_selector"
            android:clickable="true"
            android:gravity="center" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/collect_no" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:text="收藏"
                android:textColor="@color/text_num_color"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="wrap_content"
            android:background="@color/weibo_unline" />

        <LinearLayout
            android:id="@+id/mymessage_share_linerlayout"
            android:layout_width="0.0dip"
            android:layout_height="36dip"
            android:layout_weight="1"
            android:background="@drawable/common_selector"
            android:clickable="true"
            android:gravity="center" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/share_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:text="分享"
                android:textColor="@color/text_num_color"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:background="@color/weibo_unline_3d" />

</LinearLayout>